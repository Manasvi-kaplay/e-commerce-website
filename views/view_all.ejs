<form class="btn" style="float: right" action="/logout" method="get">
  <button type="submit">
      Logout
  </button>
</form>
<h2><i>Products..</i></h2>
  <form action="/view_products/view_by_filters" method="POST">
    <div style="float:right">
      <input type="text" name="category" placeholder="Search by category..">
      </div>
    <div style="float:right">
      <input type="text" name="type" placeholder="Search by type..">
      </div><br><br>
      <div style="float:right;">
      <button type="submit" hidden="hidden">Search</button>
    </div>
  </form>
<center>
    <table class="t">
        <tr>
            <th class="t1">Name</th>
            <th class="t1">Category</th>
            <th class="t1">Type</th>
            <th class="t1">Price</th>
            <th class="t1">Description</th>
            <th class="t1">Images</th>
            <th class="t1">Edit</th>
            <th class="t1">Delete</th>
            </tr>
            <% data.forEach(function(x){ %>
                <div>
                <tr>
                    <td><%=x.productname %></td>
                    <td><%=x.category %></td>
                    <td><%=x.type %></td>
                    <td><%=x.price %></td>
                    <td><%=x.description%></td>
                    <td>
                      
                      <div class="container"> 
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                          <!-- Indicators -->
                         <!--- <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                          </ol>-->
                          <!-- Wrapper for slides -->
                          <div class="carousel-inner">
                            <div>
                                <%for (var i = 0; i < x.image.length; i++){%>
                                  
                                    <img src="/product_images/<%= x.image[i]%>" alt="Chicago" height="100" width="100">
                                    
                                <%}%>
                            </div>
                          <!-- Left and right controls
                          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                          </a>
                          <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                          </a>-->
                        </div>
                      </div>
                    </td>
                    <td><a href="/products/edit/<%= x._id %>" class="btn btn-sm btn-danger">Edit</a></td>
                <td><a href="/products/delete/<%= x._id %>" class="btn btn-sm btn-danger">Delete</a></td>
                </tr>
                </div>
        <% }) %>
    </table>
    <div class="error">
      <h3><i><%=messages.info%></i></h3>
    </div>
    </center>